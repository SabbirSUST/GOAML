
<script>
    var addressFormControl = {
        'IsSingle': true,
        'ControlStr': 'taddress<prop>t_address_id^Address_type_id^Address^Town_id^City_id^Zip^country_code_id^State_id^entity_id^director_id'
    };

    var addressValidate = { 'IsChecked': false, 'validateStr': "" };
    var addressUrl = "DirectorInformation/SaveDirectorAddress";
    var redirectUrl = "Index";
</script>

<div class="row">
    <div class="col-sm-12">

        <div class="panel panel-default" id="clientlist">
            <div class="panel-body taddress">
                <div class="row">
                    <div class="col-sm-2">DIRECTORS NAME</div>
                    <div class="col-sm-8"><input type="text" name="DirectorName" id="DADirectorName" class="form-control director-name" /> </div>
                </div>
                <div>
                    <div class="row">
                        <div class="col-sm-2">ADDRESS TYPE</div>
                        <div class="col-sm-4">
                            @Html.DropDownList("Address_type_id", new SelectList(@ViewBag.ContactTypes, "tph_contact_type_id", "description"), "Select One", new { @class = "form-control" })
                            <input type="hidden" name="AddressId" id="t_address_id" class="form-control" value="" />
                            <input type="hidden" id="director_id" name="DirectorId" class="director_id" />
                            <input type="hidden" id="entity_id" name="EntityId" class="entity_id" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-2">TOWN( THANA))</div>
                        <div class="col-sm-4">
                            @Html.DropDownList("Town_id", new SelectList(@ViewBag.ThanaNames, "Value", "description"), "Select One", new { @class = "form-control" })
                        </div>
                        <div class="col-sm-2">ZIP</div>
                        <div class="col-sm-4"><input type="text" name="Zip" id="Zip" class="form-control" value="" style="display: inline-block !important;" /> </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-2">ADRESS</div>
                        <div class="col-sm-4"><input type="text" name="Address" id="Address" class="form-control" value="" style="display: inline-block !important;" /> </div>
                        <div class="col-sm-2">STATE (DIVISION)</div>
                        <div class="col-sm-4">
                            @Html.DropDownList("State_id", new SelectList(@ViewBag.DivisionNames, "Value", "description"), "Select One", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-2">CITY (DISTRICT)</div>
                        <div class="col-sm-4">
                            @Html.DropDownList("City_id", new SelectList(@ViewBag.DistrictNames, "Value", "Description"), "Select One", new { @class = "form-control" })
                        </div>
                        <div class="col-sm-2">COUNTRY</div>
                        <div class="col-sm-4">
                            @Html.DropDownList("country_code_id", new SelectList(@ViewBag.Country, "Value", "description"), "Select One", new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">&nbsp;</div>
                    <div class="col-sm-4"><button name="Save" class="btn btn-default submitBtn" onclick="director_submit(addressFormControl, addressValidate, addressUrl, controls);">Save</button> </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-11">
                    <table class="table table-striped table-responsive table-hover table-bordered">
                        <thead>
                            <tr>
                                <th>Type</th>
                                <th>Address</th>
                                <th>Town</th>
                                <th>City</th>
                                <th>Zip</th>
                                <th>State</th>
                            </tr>
                        </thead>
                        <tbody class="Taddress-table"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

