<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Product of Woori Bank">
    <meta name="author" content="Mohammed Sabbir">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- Header Start -->
    @Html.Partial("_Header")
    <!-- Header End -->
    <!-- Main Container start -->
    <div class="dashboard-container">
        <div class="container">
            <!-- Top Nav Start -->
            @Html.Partial("_MainMenu")
            <!-- Top Nav End -->
            <!-- Sub Nav End -->
            <div class="sub-nav hidden-sm hidden-xs">
                <strong style="color: white; font-size: 20px; padding-left: 2%">@ViewBag.Title</strong>
                <div class="custom-search hidden-sm hidden-xs">
                    <input type="text" class="search-query" placeholder="Search here ...">
                    <i class="fa fa-search"></i>
                </div>
            </div>
            <!-- Sub Nav End -->
            <!-- Dashboard Wrapper Start -->
            <div class="dashboard-wrapper">
                <!-- Left Sidebar Start -->
                <div class="left-sidebar">
                    <!-- Row Start -->
                    <div class="row">
                        <div class="col-lg-12 col-md-12">
                            <div class="widget">
                                @RenderBody()
                            </div>
                        </div>
                    </div>
                    <!-- Row End -->
                </div>
                <!-- Left Sidebar End -->
                <!-- Right Sidebar Start -->
                @Html.Partial("_RightSideBar")
                <!-- Right Sidebar End -->
            </div>
            <!-- Dashboard Wrapper End -->

            <footer>
                <p>© Woori Bank BD - GOAML</p>
            </footer>

        </div>
    </div>
    <!-- Main Container end -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/custom")
    @RenderSection("scripts", required: false)
    <script>
       
        //Tooltip
        $('a').tooltip('hide');
        $('.datepicker').datepicker().on('changeDate', function (ev) {
            $(this).blur();
        });
        //Popover
        $('.popover-pop').popover('hide');

        //Dropdown
        $('.dropdown-toggle').dropdown();
        
        //Color Pickers
        $(document).ready(function () {

            $('.demo').each(function () {
                $(this).minicolors({
                    control: $(this).attr('data-control') || 'hue',
                    defaultValue: $(this).attr('data-defaultValue') || '',
                    inline: $(this).attr('data-inline') === 'true',
                    letterCase: $(this).attr('data-letterCase') || 'lowercase',
                    opacity: $(this).attr('data-opacity'),
                    position: $(this).attr('data-position') || 'bottom left',
                    change: function (hex, opacity) {
                        if (!hex) return;
                        if (opacity) hex += ', ' + opacity;
                        try {
                            console.log(hex);
                        } catch (e) { }
                    },
                    theme: 'bootstrap'
                });

            });

        });
    </script>
</body>
</html>
