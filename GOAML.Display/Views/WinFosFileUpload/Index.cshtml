@{
    ViewBag.Title = "File Upload from Winfos";

}
<script>
    var dbResponse = {};
    dbResponse['MessageType'] = '@ViewBag.MessageType';
    dbResponse['Message'] = '@ViewBag.Message';
    dbResponse['ReturnValue'] = '@ViewBag.ReturnValue';
</script>

<ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#director-info-tab">Customer Information Upload</a></li>
    <li><a data-toggle="tab" href="#address-tab">Customer Account Upload</a></li>
    <li><a data-toggle="tab" href="#phone-tab">Cash Transaction Upload</a></li>
</ul>
<div class="tab-content">
    <div id="director-info-tab" class="tab-pane fade in active">
        @{
            Html.RenderPartial("Partials/_custInfoUpload");
        }
    </div>
    <div id="address-tab" class="tab-pane fade">
        @{
            Html.RenderPartial("Partials/_custAccountUpload");
        }
    </div>
    <div id="phone-tab" class="tab-pane fade">
        @{
            Html.RenderPartial("Partials/_cashTransactionUpload");
        }
    </div>
</div>



@section Scripts
{
    <script type="text/javascript">
        // your script goes here
        $(document).on('change', '.btn-file :file', function () {
            var input = $(this),
                numFiles = input.get(0).files ? input.get(0).files.length : 1,
                label = input.val().replace(/\\/g, '/').replace(/.*\//, '');
            input.trigger('fileselect', [numFiles, label]);
        });

        $(document).ready(function () {
            $('.btn-file :file').on('fileselect', function (event, numFiles, label) {
                var input = $(this).parents('.input-group').find(':text'),
                    log = numFiles > 1 ? numFiles + ' files selected' : label;
                if (input.length) {
                    input.val(log);
                } else {
                    if (log) alert(log);
                }
            });
        });
        npNotification(dbResponse);
    </script>
}