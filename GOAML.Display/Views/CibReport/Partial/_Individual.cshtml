@model GOAML.DomainModels.LocalObjects.CibIndividual

<script>
    var formControl = {
        'IsSingle': true,
        'ControlStr': 'param<prop>FirstName^LastName^NickName^PresentAddress^ParmanentAddress^Mobile^EmergencyContact^EmailAddress^DateOfBirth^City^Nationality^NationalId^RegisterCode^GroupId^MaritalStatus__R^Title__R^Sex__R^DesignationId^JoingingDate^BloodGroup^ApplicationId^IsCreator'
    };
    var controls = {
        'param': ['Title', 'FirstName', 'Commercial_name', 'Incorporation_legal_form_id', 'incorporation_number', 'Business', 'Email', 'url', 'incorporation_state', 'incorporation_country_code', 'incorporation_date', 'business_closed', 'date_business_closed', 'tax_numebr', 'tax_registeration_number', 'branchId'
        ]
    };
    var formValidate = { 'IsChecked': false, 'validateStr': "" };
    var formUrl = "Register";
    var redirectUrl = "/UserCommon/Register";
    var messageType = "notification";
</script>
<div class="addclass"></div>
<div class="row">
    <div class="col-xs-12">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Register</h3>
            </div><!-- /.box-header -->
            <!-- form start -->
            <div class="box-body form-horizontal param">
                <div class="form-group">
                    <label for="SubjectRole" class="col-sm-2 control-label">Subject Role</label>
                    <div class="col-sm-4">
                        @Html.DropDownListFor(x => x.SubjectRoleId, new SelectList(ViewBag.SubjectRoleList, "Value", "Text"), new { @class = "form-control select2", @id = "SubjectRoleId" })
                    </div>
                    <label for="FinancingType" class="col-sm-2 control-label">Type of financing *</label>
                    <div class="col-sm-4">
                        @Html.DropDownListFor(x => x.SubjectRoleId, new SelectList(ViewBag.SubjectRoleList, "Value", "Text"), new { @class = "form-control select2", @id = "SubjectRoleId" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="InstallmentNumber" class="col-sm-2 control-label">Number Of Installment: *</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="InstallmentNumber" placeholder="No Of Installment:" data-inputmask='"mask": "9999999999999999"' data-mask>
                    </div>
                    <label for="InstallmentAmount" class="col-sm-2 control-label">Installment Amount *</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="InstallmentAmount" placeholder="No Of Installment:" data-inputmask='"mask": "9999999999999999"' data-mask>
                    </div>
                </div>
                <div class="form-group">
                    <label for="Totalrequestedamount" class="col-sm-2 control-label">Total requested amount: *</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="TotalRequestedAmount" placeholder="totaL financing amount" data-inputmask='"mask": "9999999999999999"' data-mask>
                    </div>
                    <label for="PaymentPeriodicity" class="col-sm-2 control-label">Periodicity of payment</label>
                    <div class="col-sm-4">
                        @Html.DropDownListFor(x => x.SubjectRoleId, new SelectList(ViewBag.SubjectRoleList, "Value", "Text"), new { @class = "form-control select2", @id = "SubjectRoleId" })
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-default" onclick="thirdPartySubmitter(formControl, formValidate, formUrl, redirectUrl, messageType)">Register</button>
            </div><!-- /.box-footer -->
        </div>
    </div><!-- /.box -->
</div>
<!-- left column -->
